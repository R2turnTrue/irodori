<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <LangVersion>12</LangVersion>
        <Title>Irodori.Backend.OpenGL</Title>
        <Authors>R2turnTrue</Authors>
        <Description>OpenGL Rendering Backend for Irodori</Description>
        <Copyright>Copyright (c) 2025 R2turnTrue</Copyright>
        <PackageProjectUrl>https://github.com/R2turnTrue/irodori</PackageProjectUrl>
        <PackageIcon>LogoNuget.png</PackageIcon>
        <RepositoryUrl>https://github.com/R2turnTrue/irodori/</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\Irodori\Irodori.csproj" />
      <None Include="..\asset\LogoNuget.png">
        <Pack>True</Pack>
        <PackagePath></PackagePath>
        <Link>LogoNuget.png</Link>
      </None>
        <None Include="..\README.md">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
            <Link>README.md</Link>
        </None>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Silk.NET.OpenGL" Version="2.22.0" />
    </ItemGroup>

</Project>
